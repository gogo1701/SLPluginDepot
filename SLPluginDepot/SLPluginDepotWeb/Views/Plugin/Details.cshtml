@model SLPluginDepotModels.Models.PluginDetailsView
@using System.IO

@{
    ViewData["Title"] = "Plugin Details";
}

<style>
    .star-rating-wrapper {
        position: relative;
        display: inline-block;
        font-size: 2.5rem;
        unicode-bidi: bidi-override;
        direction: rtl;
    }

        .star-rating-wrapper input {
            display: none;
        }

        .star-rating-wrapper label {
            display: inline-block;
            position: relative;
            color: #ccc;
            cursor: pointer;
        }

            .star-rating-wrapper label:before {
                content: "\2605";
                position: absolute;
                left: 0;
            }

            .star-rating-wrapper label.full:hover:before,
            .star-rating-wrapper label.full:hover ~ label:before,
            .star-rating-wrapper input:checked ~ label.full:before {
                color: #ffc107;
            }

            .star-rating-wrapper label.half:before {
                content: "\2605";
                width: 50%;
                overflow: hidden;
                position: absolute;
                z-index: 1;
            }

            .star-rating-wrapper label.half:hover:before,
            .star-rating-wrapper label.half:hover ~ label:before,
            .star-rating-wrapper input:checked ~ label.half:before {
                color: #ffc107;
            }

        .star-rating-wrapper input:checked ~ label:before {
            color: #ffc107;
        }

        .star-rating-wrapper label:hover ~ label:before {
            color: #ffc107;
        }
</style>

<div class="container my-5">
    <div class="card shadow rounded-4 p-4">
        <h2 class="text-center mb-4">@Model.Plugin.Name</h2>

        <!-- Plugin Details Section -->
        <section>
            @if (!string.IsNullOrEmpty(Model.Plugin.BackgroundImageUrl))
            {
                <div class="mb-4">
                    <img src="@Model.Plugin.BackgroundImageUrl" alt="Plugin Image" class="img-fluid rounded" />
                </div>
            }

            <div class="mb-4">
                <h5>Description</h5>
                <p>@Model.Plugin.Description</p>
            </div>

            <div class="mb-4">
                <h5>Author</h5>
                <p>@Model.Plugin.Author.UserName</p>
            </div>

            <div class="mb-4">
                <h5>GitHub Repo</h5>
                @if (!string.IsNullOrEmpty(Model.Plugin.GitHubUrl))
                {
                    <a href="@Model.Plugin.GitHubUrl" target="_blank" class="btn btn-outline-dark btn-sm">View GitHub Repo</a>
                }
                else
                {
                    <p class="text-muted">No GitHub link provided</p>
                }
            </div>

            <div class="mb-4">
                <h5>Rating</h5>
                @if (Model.Ratings != null && Model.Ratings.Any())
                {
                    <span class="badge bg-primary fs-6">Average Rating: @Model.AverageRating.ToString("0.0")</span>
                }
                else
                {
                    <span class="text-muted">No ratings yet</span>
                }
            </div>

            <div class="mb-4">
                <h5>Tags</h5>
                @if (Model.Plugin.PluginTags.Any())
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var tag in Model.Plugin.PluginTags)
                        {
                            <span class="badge bg-secondary">@tag.Name</span>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No tags available</p>
                }
            </div>

            <!-- Download Plugin Section -->
            <div class="text-center mt-4">
                <a href="@Url.Action("DownloadPlugin", "Plugin", new { id = Model.Plugin.Id })" class="btn btn-primary">Download Plugin</a>
            </div>
        </section>

        <!-- Review Form at Bottom -->
        <hr class="my-5" />
        <section class="mt-5">
            <h4 class="mb-3">Leave a Review</h4>
            <form method="post" asp-controller="Plugin" asp-action="RatePlugin" asp-route-id="@Model.Plugin.Id" id="ratingForm">
                <div class="mb-3">
                    <label class="form-label">Your Rating</label>
                    <div class="star-rating-wrapper" id="starRating">
                        @for (int i = 10; i >= 1; i--)
                        {
                            var value = (i / 2.0).ToString("0.0");
                            var id = $"star{value.Replace(".", "_")}";
                            var labelClass = i % 2 == 0 ? "full" : "half";
                            <input type="radio" id="@id" name="rating" value="@value" />
                            <label for="@id" class="@labelClass" title="@value stars"></label>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <label for="review" class="form-label">Review</label>
                    <textarea name="review" id="review" class="form-control" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-success">Submit Review</button>
            </form>
        </section>

        <!-- Comment Section -->
        @if (Model.Ratings != null && Model.Ratings.Any())
        {
            <section class="mt-5">
                <h4 class="mb-4">User Reviews</h4>
                @foreach (var rating in Model.Ratings.OrderByDescending(r => r.RatedAt))
                {
                    <div class="border rounded p-3 mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <strong>@rating.User.UserName</strong>
                            <small class="text-muted">@rating.RatedAt.ToString("g")</small>
                        </div>
                        <div class="mb-2">
                            <span class="text-warning fw-bold">@rating.Stars.ToString("0.0")</span> ★
                        </div>
                        <p>@rating.Review</p>
                    </div>
                }
            </section>
        }
    </div>
</div>
