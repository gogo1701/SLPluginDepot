
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCP Plugin Depot</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        :root {
            --primary-color: #4361ee;
            --dark-bg: #1a1a1a;
            --header-bg: #0f0f0f;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            color: #333;
        }

        /* Navigation bar styling */
        .top-navbar {
            background-color: var(--header-bg);
            color: white;
            padding: 0;
        }

            .top-navbar .nav-link {
                color: white;
                padding: 1rem 1.5rem;
                font-weight: 500;
                transition: background-color 0.3s;
            }

                .top-navbar .nav-link:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }

        .navbar-brand img {
            height: 40px;
            width: auto;
        }

        /* Hero section styling */
        .hero-section {
            background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/scp-facility.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
            position: relative;
        }

        .hero-content {
            max-width: 600px;
        }

            .hero-content h1 {
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 1rem;
            }

            .hero-content p {
                font-size: 1.2rem;
                margin-bottom: 2rem;
            }

        .btn-get-started {
            background-color: var(--primary-color);
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-get-started:hover {
                background-color: #3050d8;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                color: white;
            }

        /* Welcome section styling */
        .welcome-section {
            background-color: #f0f2f5;
            padding: 60px 0;
            text-align: center;
        }

            .welcome-section h2 {
                font-size: 2.2rem;
                font-weight: 700;
                margin-bottom: 1.5rem;
                color: #222;
            }

            .welcome-section .alert-warning {
                background-color: #fff3cd;
                border-color: #ffeeba;
                color: #856404;
                display: inline-flex;
                align-items: center;
                padding: 0.75rem 1.25rem;
                font-weight: 500;
            }

            .welcome-section p {
                font-size: 1.1rem;
                margin-bottom: 2rem;
                max-width: 800px;
                margin-left: auto;
                margin-right: auto;
            }

        .btn-explore {
            background-color: #222;
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-block;
        }

            .btn-explore:hover {
                background-color: #000;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        /* Footer styling */
        footer {
            background-color: var(--dark-bg);
            color: #fff;
            padding: 2rem 0;
        }

        /* SCP header styling */
        .scp-header {
            background-color: var(--dark-bg);
            padding: 0.75rem 1rem;
            color: white;
            text-align: center;
            font-weight: 600;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Top Navigation Bar (_Layout) -->
    <nav class="navbar navbar-expand-lg top-navbar">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/images/scp-logo.png" alt="SCP Logo" class="me-2" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Plugin Browser</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                </ul>
            </div>
            <div class="ms-auto text-white">
                SCP Fanmade Plugin Browser
            </div>
        </div>
    </nav>

    <div class="scp-header d-lg-none">
        SCP Fanmade Plugin Browser
    </div>

    @RenderBody()

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; @DateTime.Now.Year - SCP Plugin Depot - All rights reserved</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>Not affiliated with SCP: Secret Laboratory</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>