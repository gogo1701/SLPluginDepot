@model IEnumerable<SLPluginDepotModels.Models.Plugin>

@{
    ViewData["Title"] = "Plugin Browser";
}

<style>
    body {
        background-color: #0e1013;
        color: #f1f1f1;
    }

    .plugin-browser-container {
        max-width: 1000px;
        margin: auto;
        padding: 40px 20px;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
    }

    .search-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-bottom: 30px;
        justify-content: center;
    }

        .search-bar input[type="text"] {
            flex-grow: 1;
            min-width: 280px;
            padding: 12px 18px;
            border-radius: 10px;
            border: none;
            background: #2d2f36;
            color: white;
        }

        .search-bar .btn {
            padding: 12px 24px;
            font-weight: bold;
            border-radius: 10px;
        }

    .btn-add {
        background-color: #28a745;
        color: white;
    }

        .btn-add:hover {
            background-color: #1e7e34;
        }

    .btn-search {
        background-color: #007bff;
        color: white;
    }

        .btn-search:hover {
            background-color: #0056b3;
        }

    .plugin-list {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .plugin-row {
        background-color: #1f2128;
        border-radius: 14px;
        display: flex;
        padding: 20px;
        gap: 24px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.3);
        transition: box-shadow 0.3s ease;
    }

        .plugin-row:hover {
            box-shadow: 0 8px 22px rgba(0,0,0,0.5);
        }

    .plugin-image-container {
        width: 200px;
        display: flex;
        flex-direction: column;
        position: relative;
    }

        .plugin-image-container img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            object-fit: cover;
            margin-bottom: 10px;
        }

    .rating {
        position: absolute;
        top: 100%;
        left: 0;
        margin-top: 8px;
        font-size: 0.9rem;
        color: #f1c40f;
        background-color: #2c2f36;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: bold;
    }

    .tags {
        position: absolute;
        top: 100%;
        right: 0;
        margin-top: 8px;
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .tag {
        background-color: #333;
        color: #ddd;
        padding: 4px 10px;
        font-size: 0.75rem;
        border-radius: 5px;
    }

    .plugin-info {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .plugin-info h4 {
            font-size: 1.6rem;
            margin-bottom: 12px;
            color: #fff;
        }

        .plugin-info p {
            color: #ccc;
            font-size: 0.95rem;
            line-height: 1.6;
        }

    .no-results {
        text-align: center;
        margin-top: 50px;
        font-size: 1.1rem;
        color: #aaa;
    }
</style>

<div class="plugin-browser-container">
    <h2>Browse SCP Plugins</h2>

    <div class="search-bar">
        <a href="@Url.Action("AddPlugin", "Plugin")" class="btn btn-add">Add Plugin</a>

        <form method="get" asp-controller="Plugin" asp-action="Search" class="d-flex w-100">
            <input type="text" name="query" class="form-control me-2" placeholder="Search plugins..." />
            <button type="submit" class="btn btn-search">Search</button>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="plugin-list">
            @foreach (var plugin in Model)
            {
                <a href="@Url.Action("Details", "Plugin", new { id = plugin.Id })" style="text-decoration: none; color: inherit;">
                    <div class="plugin-row">
                        <div class="plugin-image-container">
                            <img src="@plugin.BackgroundImageUrl" alt="@plugin.Name" />
                            <span class="rating">⭐ @(plugin.Ratings?.Any() == true ? plugin.Ratings.Average(r => r.Stars).ToString("0.0") : "No ratings")</span>
                            <div class="tags">
                                @foreach (var tag in plugin.PluginTags)
                                {
                                    <span class="tag">@tag</span>
                                }
                            </div>
                        </div>
                        <div class="plugin-info">
                            <h4>@plugin.Name</h4>
                            <p>@plugin.Description</p>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <p class="no-results">No plugins found matching your search.</p>
    }
</div>
